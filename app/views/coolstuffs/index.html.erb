<p id="notice"><%= notice %></p>

<h1>Listing Coolstuffs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coolstuffs.each do |coolstuff| %>
      <tr>
        <td><%= link_to 'Show', coolstuff %></td>
        <td><%= link_to 'Edit', edit_coolstuff_path(coolstuff) %></td>
        <td><%= link_to 'Destroy', coolstuff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coolstuff', new_coolstuff_path %>
